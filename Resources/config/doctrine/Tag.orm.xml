<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                  http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <mapped-superclass name="Evilpope\TaggingBundle\Entity\Tag" table="evilpope_tag_tag">

        <field name="name"          column="name"           type="string"   length="50"     unique="true" />
        <field name="slug"          column="slug"           type="string"   length="50"     unique="true" />

        <field name="createdAt"     column="created_at"     type="datetime" />
        <field name="updatedAt"     column="updated_at"     type="datetime" />

        <!-- <one-to-many field="tagging" target-entity="Evilpope\TaggingBundle\Entity\Tagging" mapped-by="tag" /> -->

    </mapped-superclass>

</doctrine-mapping>
